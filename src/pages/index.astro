---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import GuiFeature from "../components/features/GuiFeature.astro";
import CommunityFeature from "../components/features/CommunityFeature.astro";

import Video from "../components/Video.astro";

import "../components/animation.css";

const cards = [
    {
        title: "Combat",
        description: "This client has decent pvp features, like fast AutoCrystal and AutoAnchor"
    },
    {
        title: "Movement",
        description: "ThunderHack has one of the best renders among minecraft clients"
    },
    {
        title: "Render",
        description: "A large number of movement features will make your gaming experience unforgettable"
    },
];
---

<Layout title="ThunderHack">
    <Video/>

    <!--Cards-->
    <div class="opacity-animation">
        <ul class="justify-between flex items-center">
            {cards.map(card =>
                    <Card title={card.title} description={card.description}/>)}
        </ul>
    </div>

    <!--Features-->
    <GuiFeature layers={["1.png", "2.png", "3.png"]}/>
    <!--<GitHubStats/>-->
    <CommunityFeature/>
</Layout>

<script is:inline src="/scripts/index.ts" lang="ts"></script>